{
  "extends": ["config:base", ":rebaseStalePrs", ":masterIssue"],
  "pinDigests": true,
  "packageRules": [
    {
      "updateTypes": ["major"],
      "masterIssueApproval": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["ENV COMPOSER_VERSION=(?<currentValue>.*?)\n"],
      "depNameTemplate": "composer/composer",
      "datasourceTemplate": "github-releases"
    }
  ]
}
